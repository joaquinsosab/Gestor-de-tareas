{"ast":null,"code":"import \"core-js/modules/es.array.push.js\";\nimport AddTask from '../views/AddTask.vue';\nimport TaskList from '../views/TaskList.vue';\nexport default {\n  name: \"CombinedView\",\n  components: {\n    AddTask,\n    TaskList\n  },\n  data() {\n    return {\n      tasks: [] // Mantiene las tareas en el estado de la vista combinada\n    };\n  },\n  methods: {\n    addTask(newTask) {\n      this.tasks.push(newTask); // Añade la nueva tarea a la lista\n    },\n    toggleCompletion(task) {\n      task.completed = !task.completed;\n    },\n    deleteTask(task) {\n      this.tasks = this.tasks.filter(t => t.id !== task.id);\n    }\n  }\n};","map":{"version":3,"names":["AddTask","TaskList","name","components","data","tasks","methods","addTask","newTask","push","toggleCompletion","task","completed","deleteTask","filter","t","id"],"sources":["src/views/CombinedView.vue"],"sourcesContent":["<template>\r\n    <div>\r\n        <h1>Lista de Tareas</h1>\r\n        <AddTask @add-task=\"addTask\" />\r\n        <ul v-if=\"tasks.length\" class=\"list-group mt-3\">\r\n            <li v-for=\"task in tasks\" :key=\"task.id\" class=\"list-group-item\">\r\n                <span :class=\"{ 'completed': task.completed }\">{{ task.todo }}</span>\r\n                <div class=\"actions\">\r\n                    <button @click=\"toggleCompletion(task)\" class=\"btn btn-success btn-sm\">\r\n                        {{ task.completed ? 'Desmarcar' : 'Completar' }}\r\n                    </button>\r\n                    <button @click=\"deleteTask(task)\" class=\"btn btn-danger btn-sm\">Eliminar</button>\r\n                </div>\r\n            </li>\r\n        </ul>\r\n        <p v-else>No hay tareas disponibles.</p>\r\n    </div>\r\n</template>\r\n\r\n<script>\r\nimport AddTask from '../views/AddTask.vue';\r\nimport TaskList from '../views/TaskList.vue';\r\n\r\nexport default {\r\n    name: \"CombinedView\",\r\n    components: {\r\n        AddTask,\r\n        TaskList\r\n    },\r\n    data() {\r\n        return {\r\n            tasks: [] // Mantiene las tareas en el estado de la vista combinada\r\n        };\r\n    },\r\n    methods: {\r\n        addTask(newTask) {\r\n            this.tasks.push(newTask); // Añade la nueva tarea a la lista\r\n        },\r\n        toggleCompletion(task) {\r\n            task.completed = !task.completed;\r\n        },\r\n        deleteTask(task) {\r\n            this.tasks = this.tasks.filter(t => t.id !== task.id);\r\n        }\r\n    }\r\n};\r\n</script>\r\n\r\n<style scoped>\r\n.list-group-item {\r\n    display: flex;\r\n    justify-content: space-between;\r\n    align-items: center;\r\n}\r\n\r\n.actions button {\r\n    margin-left: 10px;\r\n}\r\n\r\n.completed {\r\n    text-decoration: line-through;\r\n    color: grey;\r\n}\r\n</style>\r\n"],"mappings":";AAoBA,OAAAA,OAAA;AACA,OAAAC,QAAA;AAEA;EACAC,IAAA;EACAC,UAAA;IACAH,OAAA;IACAC;EACA;EACAG,KAAA;IACA;MACAC,KAAA;IACA;EACA;EACAC,OAAA;IACAC,QAAAC,OAAA;MACA,KAAAH,KAAA,CAAAI,IAAA,CAAAD,OAAA;IACA;IACAE,iBAAAC,IAAA;MACAA,IAAA,CAAAC,SAAA,IAAAD,IAAA,CAAAC,SAAA;IACA;IACAC,WAAAF,IAAA;MACA,KAAAN,KAAA,QAAAA,KAAA,CAAAS,MAAA,CAAAC,CAAA,IAAAA,CAAA,CAAAC,EAAA,KAAAL,IAAA,CAAAK,EAAA;IACA;EACA;AACA","ignoreList":[]},"metadata":{},"sourceType":"module","externalDependencies":[]}