{"ast":null,"code":"import \"core-js/modules/es.array.push.js\";\nimport axios from 'axios';\nimport AddTask from '../views/AddTask.vue';\nexport default {\n  name: \"CombinedView\",\n  components: {\n    AddTask\n  },\n  data() {\n    return {\n      tasks: [] // Mantiene las tareas en el estado de la vista combinada\n    };\n  },\n  methods: {\n    addTask(newTask) {\n      this.tasks.push(newTask); // A単ade la nueva tarea a la lista\n    },\n    toggleCompletion(task) {\n      task.completed = !task.completed;\n    },\n    deleteTask(task) {\n      this.tasks = this.tasks.filter(t => t.id !== task.id);\n    },\n    async fetchTasks() {\n      try {\n        const response = await axios.get('https://dummyjson.com/todos');\n        const apiTasks = response.data.todos.map(task => ({\n          todo: task.todo,\n          completed: task.completed,\n          id: task.id\n        }));\n        this.tasks = [...this.tasks, ...apiTasks]; // A単adir tareas de la API a la lista actual\n      } catch (error) {\n        console.error('Error fetching tasks:', error);\n      }\n    }\n  }\n};","map":{"version":3,"names":["axios","AddTask","name","components","data","tasks","methods","addTask","newTask","push","toggleCompletion","task","completed","deleteTask","filter","t","id","fetchTasks","response","get","apiTasks","todos","map","todo","error","console"],"sources":["src/views/CombinedView.vue"],"sourcesContent":["<template>\r\n    <div>\r\n        <h1>Lista de Tareas</h1>\r\n        <button @click=\"fetchTasks\" class=\"btn btn-primary mb-3\">Cargar Tareas desde la API</button>\r\n        <AddTask :tasks=\"tasks\" @add-task=\"addTask\" @toggle-completion=\"toggleCompletion\" @delete-task=\"deleteTask\" />\r\n        <ul v-if=\"tasks.length\" class=\"list-group mt-3\">\r\n            <li v-for=\"task in tasks\" :key=\"task.id\" class=\"list-group-item\">\r\n                <span :class=\"{ 'completed': task.completed }\">{{ task.todo }}</span>\r\n                <div class=